@model IEnumerable<Hotellerie_X.Models.HotellerieModel.Appreciation>

@{
    ViewData["Title"] = "Appréciations par hôtel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Appréciations pour l’hôtel : <strong>@ViewBag.HotelName</strong></h2>

<p>
    <a asp-controller="Hotels" asp-action="Index" class="btn btn-secondary">Retour aux hôtels</a>
</p>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Nom Personne</th>
            <th>Commentaire</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomPers</td>

                <td>@item.Commentaire</td>
                <td>@item.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>