@model Hotellerie_X.Models.HotellerieModel.Appreciation

@{
    ViewData["Title"] = "Modifier l’appréciation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Modifier l’appréciation</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Commentaire" class="form-label"></label>
                <textarea asp-for="Commentaire" class="form-control"></textarea>
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HotelId" class="form-label">Hôtel</label>
                <select asp-for="HotelId" class="form-select" asp-items="ViewBag.HotelId"></select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}