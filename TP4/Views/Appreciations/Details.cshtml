@model Hotellerie_X.Models.HotellerieModel.Appreciation

@{
    ViewData["Title"] = "Détails de l’appréciation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Détails de l’appréciation</h1>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Commentaire</dt>
            <dd class="col-sm-9">@Model.Commentaire</dd>

            <dt class="col-sm-3">Note</dt>
            <dd class="col-sm-9">@Model.Note</dd>

            <dt class="col-sm-3">Hôtel</dt>
            <dd class="col-sm-9">@Model.Hotel?.Nom</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>