@model Hotellerie_X.Models.HotellerieModel.Appreciation

@{
    ViewData["Title"] = "Supprimer l’appréciation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4 text-danger">Supprimer l’appréciation</h1>

<h5>Êtes-vous sûr de vouloir supprimer cette appréciation ?</h5>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Commentaire</dt>
            <dd class="col-sm-9">@Model.Commentaire</dd>

            <dt class="col-sm-3">Note</dt>
            <dd class="col-sm-9">@Model.Note</dd>

            <dt class="col-sm-3">Hôtel</dt>
            <dd class="col-sm-9">@Model.Hotel?.Nom</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>